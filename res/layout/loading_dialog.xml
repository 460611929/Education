<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.androiddemo.view.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/progresswheel_wide"
        android:layout_height="@dimen/progresswheel_high"
        android:layout_gravity="center"
        app:matProg_barColor="#ff5a37"
        app:matProg_circleRadius="@dimen/progresswheel_circle"
        app:matProg_progressIndeterminate="true" />

</LinearLayout>